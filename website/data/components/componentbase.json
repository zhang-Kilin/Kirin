			},
			"render":{
				"qualifier":"abstract",
				"arguments":"()",
				"returnType":"",
				"description":"预留给子类的渲染函数"
			},
			"show":{
				"qualifier":"",
				"arguments":"()",
				"returnType":"",
				"description":"显示组件"
			},
			"hide":{
				"qualifier":"",
				"arguments":"()",
				"returnType":"",
				"description":"隐藏组件"
			},
			"destroy":{
				"qualifier":"",
				"arguments":"()",
				"returnType":"",
				"description":"销毁组件"
			}
		},
		"Events":{
			"show":{
				"qualifier":"event",
				"arguments":"",
				"returnType":"",
				"description":"当组件被显示之前触发"
			},
			"shown":{
				"qualifier":"event",
				"arguments":"",
				"returnType":"",
				"description":"当组件被完全显示之后触发"
			},
			"hide":{
				"qualifier":"event",
				"arguments":"",
				"returnType":"",
				"description":"当组件被隐藏之前触发"
			},
			"hidden":{
				"qualifier":"event",
				"arguments":"",
				"returnType":"",
				"description":"当组件被完全显示之后触发"
			},
			"destroy":{
				"qualifier":"event",
				"arguments":"",
				"returnType":"",
				"description":"当组件被销毁之前触发"
			},
			"destroyed":{
				"qualifier":"event",
				"arguments":"",
				"returnType":"",
				"description":"当组件被销毁之后触发"
			}
		}
	}
